<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Kitchen"
    android:background="#dfe9f7">
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="160dp"
            app:cardBackgroundColor="#D724D0DA"
            android:layout_marginRight="7dp"
            app:cardCornerRadius="15dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_margin="30dp"
                android:src="@drawable/fan">

            </ImageView>


            <Switch
                android:id="@+id/s1"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="25dp"
                android:minHeight="48dp"
                android:paddingTop="10dp"
                android:thumb="@drawable/thumb_switch"
                android:track="@drawable/track_switch" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100dp"
                android:textColor="@color/white"
                android:fontFamily="@font/kanit_font"
                android:text="Fan" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:layout_marginLeft="7dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="#C846D835">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/light"
                android:layout_margin="30dp">

            </ImageView>


            <Switch
                android:id="@+id/s2"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="25dp"
                android:paddingTop="10dp"
                android:minHeight="48dp"
                android:thumb="@drawable/thumb_switch"
                android:track="@drawable/track_switch" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100dp"
                android:textColor="@color/white"
                android:fontFamily="@font/kanit_font"
                android:text="Light"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="160dp"
            app:cardBackgroundColor="#AEF97729"
            android:layout_marginRight="7dp"
            app:cardCornerRadius="15dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_margin="30dp"
                android:src="@drawable/airconditioner">

            </ImageView>


            <Switch
                android:id="@+id/s3"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="25dp"
                android:minHeight="48dp"

                android:paddingTop="10dp"
                android:thumb="@drawable/thumb_switch"
                android:track="@drawable/track_switch" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100dp"
                android:text="AC"
                android:textColor="@color/white"
                android:fontFamily="@font/kanit_font"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="160dp"
            app:cardBackgroundColor="#A86427CC"
            android:layout_marginLeft="7dp"
            app:cardCornerRadius="15dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_margin="30dp"
                android:src="@drawable/lcd">

            </ImageView>


            <Switch
                android:id="@+id/s4"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="25dp"
                android:minHeight="48dp"
                android:paddingTop="10dp"

                android:thumb="@drawable/thumb_switch"
                android:track="@drawable/track_switch" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100dp"
                android:textColor="@color/white"
                android:fontFamily="@font/kanit_font"
                android:text="LED TV" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>
